
<section class="section-detail">
   <img class="detail-top-img" src="{{profesor.imageUrl}}" alt="image-background">
   <div class="detail-info">
      <h1>{{profesor.header}}</h1>
      <div class="info-teacher">
         <img class="img-profile" src="{{profesor.imageProfile}}" alt="profile-image">
         <h3>{{profesor.name}}</h3>
      </div>
      <p>{{profesor.description}}</p>
      <p>Mail: {{profesor.mail}}</p>


      {{!-- //localizaci√≥n --}}
       <p class="coordinates" hidden>{{profesor.location.coordinates}}</p> 
      <div class="map-detail" id="map"></div>

      <form action="/detail/{{profesor._id}}" method="post">
         <button  class= "btn btn-primary" type="submit">Teach Me</button>
      </form>
   </div>

</section>

